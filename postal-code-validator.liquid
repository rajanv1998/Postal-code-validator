{% schema %}
{
    "name": "Postal Code Settings",
    "settings": [
      {
        "type": "textarea",
        "id": "valid_postal_codes",
        "label": "Valid Postal Codes",
        "info": "Enter valid postal codes separated by commas."
      }
    ]
  }
  {% endschema %}
